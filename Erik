def anzeigen(listen):
    if not listen:
        print("Nix da.")
        return
    for lname in listen.keys(): 
        print(f"Liste: {lname}")
        
def hinzufuegen(listen):
    lname = input("Namen der neuen Liste eingeben: ")
    if lname in listen:
        print("Gibts schon")
    else:
        listen[lname] = []
        print(f"Liste '{lname}' wurde erstellt.")
        
        
listen = {}

while True:
    print("1. Listen anzeigen")
    print("2. Neue Liste")
    
    auswahl = input("Entscheid dich: ")     
    if auswahl == '1':
        anzeigen(listen)
    elif auswahl == '2':
            hinzufuegen(listen)
    else:
        break
        
